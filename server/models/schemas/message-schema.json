{
    "$jsonSchema": {
        "bsonType": "object",
        "required": [
            "subject", "receiverId", "senderId"
        ],
        "properties": {          
            "senderId": {
                "bsonType": "objectId"
            },
            "receiverId": {
                "bsonType": "objectId"
            },
            "subject": {
                "bsonType": "string"
            },
            "message": {
                "bsonType": "string"
            },
            "eventType": {
                "bsonType": "string"
            },
            "isRead": {
                "bsonType": "boolean",
                "default": true
            },
            "createdDate": {
                "bsonType": "date"
            },
            "lastModifiedDate": {
                "bsonType": "date"
            }
        }
    }
}